<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.znsd.client.dao.ContactsDao">
 	
 	<!-- 分页查询数据 -->
 	<select id="selectContactsPage" resultType="com.znsd.client.bean.SalesContacts" parameterType="java.lang.String">
 		select * from sales_contacts where name like "%"#{name}"%" limit 0,5
 	</select>
 	
 	<!-- 查询总条数 -->
 	<select id="selectContactsCount" resultType="java.lang.Long" parameterType="java.lang.String">
 		select count(id) where name like "%"#{name}"%"
 	</select>
		
	<insert id="addContacts" parameterType="com.znsd.client.bean.SalesContacts">
		insert into sales_contacts(name,sex,phone,address,remark,birthday,chanceContent,workPhone,familyPhone,email) values (#{name},#{sex},#{phone},#{address},#{remark},#{birthday},#{chanceContent},#{workPhone},#{familyPhone},#{email})
	</insert>
	
	<delete id="delContacts" parameterType="java.lang.Integer">
		delete from sales_contacts where id = #{id}
	</delete>
 	
 	<!-- <update id="updateUser" parameterType="com.znsd.client.bean.SalesContacts">
 		
 	</update> -->
 </mapper>