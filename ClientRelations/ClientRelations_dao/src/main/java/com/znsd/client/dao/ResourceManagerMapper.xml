<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <!-- 保证唯一性 
       使用接口方式加载命名空间 使用代理模式
   -->
 <mapper namespace="com.znsd.client.dao.ClientResourceMapperDao">
 	
 	<resultMap type="java.util.HashMap" id="clientResourceMap">
 		<id column="client_id" property="clientId"/>
 		<result column="client_name" property="clientName"/>
 		<result column="sex" property="sex"/>
 		<result column="client_type" property="clientType"/>
 		<result column="state" property="state"/>
 		<result column="allot_state" property="allotState"/>
 		<result column="in_time" property="inTime"/>
 		<result column="entry_person" property="entryPerson"/>
 	</resultMap>
 	<parameterMap type="java.util.HashMap" id="clientInfoMap">
 		<parameter property="clientName"/>
 		<parameter property="phone"/>
 	</parameterMap>
 	<select id="selectAllClient" resultMap="clientResourceMap" parameterMap="clientInfoMap">
 		select client_id,client_name,sex,client_type,state,allot_state,in_time,entry_person from client_resource
 		<where>
 			<if test="clientName != null || clientName != ''">
 				client_name = '${clientName}'
 			</if>
 			<if test="phone != null || phone != ''">
 				phone like '${phone}'
 			</if>
 		</where>
 	</select>
 	
 </mapper>